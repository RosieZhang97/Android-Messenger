<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Welcome back!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp" />

    <Button
        android:id="@+id/friendly"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn"
        android:text="查看好友列表"
        android:textColor="@color/text_007fe0"
        android:textSize="20dp" />

    <Button
        android:id="@+id/returnback"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/friendly"
        android:layout_alignStart="@+id/friendly"
        android:layout_below="@+id/friendly"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn"
        android:onClick="back_to_login"
        android:text="退出系统登录"
        android:textColor="@color/text_007fe0"
        android:textSize="20dp" />


</RelativeLayout>
