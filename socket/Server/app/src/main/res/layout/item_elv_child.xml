<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <client.example.com.server.customView.CircleImageView
        android:id="@+id/iv_child_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@mipmap/iuser001"
        app:border_color="#E0E0E0"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/tv_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_child_icon"
        android:gravity="center"
        android:textColor="@color/text_858585" />

    <TextView
        android:id="@+id/tv_child_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_child_name"
        android:layout_below="@+id/tv_child_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_1f1f1f" />

    <TextView
        android:id="@+id/tv_child_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:textColor="@color/text_858585" />

</RelativeLayout>