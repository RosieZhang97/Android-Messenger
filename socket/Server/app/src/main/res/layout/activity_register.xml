<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.lenovo.myapplication.RegisterActivity">

    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/edit_name"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignRight="@+id/edit_name"
        android:layout_alignStart="@+id/edit_name"
        android:layout_below="@+id/edit_name"
        android:layout_marginTop="13dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请输入您的密码"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:ems="10"
        android:hint="请输入您的用户名"
        android:inputType="textPersonName"
        android:singleLine="false"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="44dp" />

    <!--

    <EditText android:id="@+id/edt_operator_name" style="@style/syncEditText"
        android:hint="@string/hint_operator_name" />
    <ImageView android:id="@+id/syncOperatorImg" style="@style/syncImageView"
        android:layout_alignLeft="@+id/edt_operator_name"
        android:layout_alignTop="@+id/edt_operator_name"
        android:layout_alignBottom="@+id/edt_operator_name" android:src="@drawable/sync_operator" />
-->

    <EditText
        android:id="@+id/check_pwd"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/edit_pwd"
        android:layout_alignLeft="@+id/edit_pwd"
        android:layout_alignRight="@+id/edit_pwd"
        android:layout_alignStart="@+id/edit_pwd"
        android:layout_below="@+id/edit_pwd"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请确认您的密码"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="193dp" />

    <Button
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_pwd"
        android:layout_alignStart="@+id/check_pwd"

        android:layout_below="@+id/check_pwd"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"

        android:layout_marginTop="52dp"

        android:background="@drawable/btn"
        android:text="确定"
        android:textColor="@color/text_007fe0"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="312dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sure"

        android:layout_alignBottom="@+id/sure"
        android:layout_alignEnd="@+id/check_pwd"
        android:layout_alignRight="@+id/check_pwd"

        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/btn"
        android:text="取消"
        android:textColor="@color/text_007fe0"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="312dp" />
</RelativeLayout>
